pipeline {
    agent any

    environment {
        // Set AWS region and credentials as environment variables from Jenkins credentials
        AWS_REGION = 'us-east-1'
        AWS_ACCESS_KEY_ID = credentials('aws-access-key-id')    // AWS access key
        AWS_SECRET_ACCESS_KEY = credentials('aws-secret-access') // AWS secret key
    }

    stages {
        stage('Checkout') {
            steps {
                // Clone the Terraform code from GitHub
                git branch: 'main', url: 'https://github.com/your-username/your-terraform-repo.git'
            }
        }

        stage('Terraform Init') {
            steps {
                dir('path-to-your-terraform-code') {
                    // Initialize Terraform
                    sh 'terraform init'
                }
            }
        }

        stage('Terraform Plan') {
            steps {
                dir('path-to-your-terraform-code') {
                    // Run Terraform plan to see the changes
                    sh 'terraform plan -out=tfplan'
                }
            }
        }

        stage('Approval') {
            input {
                message "Do you want to apply these changes?"
            }
        }

        stage('Terraform Apply') {
            steps {
                dir('path-to-your-terraform-code') {
                    // Apply the changes if approved
                    sh 'terraform apply -auto-approve tfplan'
                }
            }
        }
    }

    post {
        always {
            cleanWs()  // Clean up workspace
        }
        success {
            echo 'Terraform pipeline executed successfully!'
        }
        failure {
            echo 'Terraform pipeline failed!'
        }
    }
}
